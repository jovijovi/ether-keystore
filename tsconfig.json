{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "removeComments": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@0x/typescript-typings/types",
      "node_modules/@types"
    ]
  },
  "include": [
    "./lib/**/*",
    "./test/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "doc",
  ]
}
